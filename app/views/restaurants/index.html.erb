<h1 class="text-center my-4">Restaurants overview</h1>

<div class="container">
  <ul class="list-group mb-4">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark" %>
      </li>
    <% end %>
  </ul>

  <div class="text-center">
    <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-success btn-lg" %>
  </div>
</div>
